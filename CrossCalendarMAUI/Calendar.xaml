            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1" />
            <RowDefinition Height="{Binding Index}" />
            <RowDefinition Height="{Binding Index}" />
            <RowDefinition Height="{Binding Index}" />
            <RowDefinition Height="{Binding Index}" />
            <RowDefinition Height="{Binding Index}" />
            <RowDefinition Height="{Binding Index}" />
            <RowDefinition Height="{Binding Index}" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding Index}" />
            <ColumnDefinition Width="{Binding Index}" />
            <ColumnDefinition Width="{Binding Index}" />
            <ColumnDefinition Width="{Binding Index}" />
            <ColumnDefinition Width="{Binding Index}" />
            <ColumnDefinition Width="{Binding Index}" />
            <ColumnDefinition Width="{Binding Index}" />
        </Grid.ColumnDefinitions>
        <cmp:CustomLabel
            x:Name="titleLabel"
            Grid.Row="0"
            Grid.ColumnSpan="7"
            Margin="5"
            x:FieldModifier="public"
            FontAttributes="Bold"
            FontSize="{OnIdiom Phone='19',
                               Default='20'}"
            HorizontalTextAlignment="Center"
            Text="{Binding Title}"
            TextColor="{Binding TitleTextColor}"
            VerticalTextAlignment="Center" />
        <cmp:CustomLabel
            x:Name="subtitleLabel"
            Grid.Row="1"
            Grid.ColumnSpan="7"
            x:FieldModifier="public"
            FontSize="{OnIdiom Phone='17',
                               Default='19'}"
            HorizontalTextAlignment="Center"
            Text="{Binding Title}"
            TextColor="{Binding SubTitleTextColor}"
            VerticalTextAlignment="Center" />
        <Frame
            Grid.Row="2"
            Grid.ColumnSpan="7"
            Margin="0,15"
            Padding="10,5"
            BackgroundColor="{Binding PanelColor}"
            BorderColor="Transparent"
            HasShadow="False">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <Label
                    FontAttributes="Bold"
                    FontSize="{OnIdiom Phone='18',
                                       Desktop='20'}"
                    Text="{Binding DateText, StringFormat='{0:MMM yyyy}'}"
                    TextColor="{Binding TintPanelColor}"
                    VerticalTextAlignment="Center" />
                <Path
                    Grid.Column="1"
                    Aspect="Uniform"
                    Data="M400,880L0,480L400,80L456,137L113,480L456,823L400,880Z"
                    Fill="{Binding TintPanelColor}"
                    HeightRequest="25"
                    Stroke="{Binding TintPanelColor}"
                    StrokeThickness="1"
                    WidthRequest="25" />
                <Path
                    Grid.Column="2"
                    Aspect="Uniform"
                    Data="M304,878L248,821L591,478L248,135L304,78L704,478L304,878Z"
                    Fill="{Binding TintPanelColor}"
                    HeightRequest="25"
                    Stroke="{Binding TintPanelColor}"
                    StrokeThickness="1"
                    WidthRequest="25" />

                <cmp:CustomButton
                    Grid.Column="1"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    Clicked="ButtonPrevDate_Clicked"
                    HeightRequest="44"
                    VerticalOptions="Center"
                    WidthRequest="44" />
                <cmp:CustomButton
                    Grid.Column="2"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    Clicked="ButtonNextDate_Clicked"
                    HeightRequest="44"
                    VerticalOptions="Center"
                    WidthRequest="44" />
            </Grid>
        </Frame>

